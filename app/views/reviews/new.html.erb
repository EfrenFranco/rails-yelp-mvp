<div class="container">
  <h1>Add a review~</h1>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :rating %>
    <%= f.input :content %>
    <%= f.submit class: 'btn btn-primary mt-2' %>
  <% end %>
<p><%= link_to "Go back to the restaurant", restaurant_path(@restaurant), class: "btn btn-primary mt-2" %> </p>
</div>
